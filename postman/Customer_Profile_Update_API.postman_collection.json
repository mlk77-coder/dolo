						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John\",\n    \"surname\": \"Smith\",\n    \"email\": \"john.smith@example.com\",\n    \"username\": \"johnsmith\",\n    \"date_of_birth\": \"1990-01-15\",\n    \"gender\": \"male\"\n}"
